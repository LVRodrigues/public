<?xml version="1.0" encoding="UTF-8"?>
<project>
    <edit>${project.scm.url}</edit>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.10.0</version>
    </skin>

    <bannerLeft>
        <name>${project.artifactId}</name>
    </bannerLeft>

    <bannerRight>
        <name/>
    </bannerRight>

    <publishDate position="left" format="dd/MM/yyyy HH:mm"/>
    <version position="right"/>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <navBarStyle>navbar-inverse</navBarStyle>
            <sideBarEnabled>false</sideBarEnabled>
            <profile>production</profile>

            <gitHub>
                <projectId>lvrodrigues/repository</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
            
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
            <copyrightClass>pull-right</copyrightClass>
        </fluidoSkin>
    </custom>

    <body>
        <menu name="Início">
            <item name="Luciano Vieira Rodrigues" href="https://lvrodrigues.github.io/"/>
            <item name="Repositório" href="https://lvrodrigues.github.io/repository/"/>
        </menu>
        <menu ref="modules"/>
        <menu ref="reports"/>
    </body>
</project>